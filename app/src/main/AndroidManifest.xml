<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.moviedb">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".presentation.app.MainApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="sensorPortrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.movies_list.MoviesListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".presentation.movie_details.MovieDetailsActivity">
        </activity>
        <activity android:name=".presentation.favorites.FavoriteMoviesActivity">
        </activity>
    </application>

</manifest>